<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearlayoutvertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/texture_3"
        android:orientation="vertical"
        android:padding="5dp" android:paddingBottom="16dp">

        <com.riktamtech.android.sellabike.widget.MyGallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <com.riktamtech.android.sellabike.widget.CircleIndicator
            android:id="@+id/circleIndicator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/linearver1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/bikeNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/orange"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#FF909090" />

            <RelativeLayout
                android:id="@+id/featuresRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/year_bike_details"
                    style="@style/fragment_bike_details_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/list_dot_page7"
                    android:drawablePadding="2dp" />

                <TextView
                    android:id="@+id/feature_bike_details"
                    style="@style/fragment_bike_details_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/list_dot_page7"
                    android:drawablePadding="2dp"
                    android:paddingRight="100dp" />

                <TextView
                    android:id="@+id/engine_bike_details"
                    style="@style/fragment_bike_details_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/year_bike_details"
                    android:layout_below="@id/year_bike_details"
                    android:drawableLeft="@drawable/list_dot_page7"
                    android:drawablePadding="2dp" />

                <TextView
                    android:id="@+id/miles_bike_details"
                    style="@style/fragment_bike_details_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/engine_bike_details"
                    android:layout_below="@id/engine_bike_details"
                    android:drawableLeft="@drawable/list_dot_page7"
                    android:drawablePadding="2dp" />

                <TextView
                    android:id="@+id/abs_bike_details"
                    style="@style/fragment_bike_details_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/feature_bike_details"
                    android:layout_below="@id/feature_bike_details"
                    android:drawableLeft="@drawable/list_dot_page7"
                    android:drawablePadding="2dp" />

                <TextView
                    android:id="@+id/owner_bike_details"
                    style="@style/fragment_bike_details_row_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/abs_bike_details"
                    android:layout_below="@+id/abs_bike_details"
                    android:drawableLeft="@drawable/list_dot_page7"
                    android:drawablePadding="2dp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:background="#FF909090" />

            <TextView
                android:id="@+id/description_bike_details"
                style="@style/fragment_bike_details_row_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:textSize="12dp" />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:padding="10dp" >

                <LinearLayout
                    android:id="@+id/distance_bikedetails_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView_distance"
                        style="@style/fragment_bike_details_row_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/distance_text_bikedetails"
                        style="@style/fragment_bike_details_row_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_from_bikedetails"
                        style="@style/fragment_bike_details_row_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/viewonmap_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/distance_bikedetails_textview"
                    android:drawableLeft="@drawable/view_map"
                    android:drawablePadding="6dp"
                    android:text="@string/viewonmap"
                    android:textColor="@color/orange"
                    android:textSize="13dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/texture_2"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/contactSellerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:src="@drawable/btn_contactseller" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactSellerView"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/saveforlater_bike_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:src="@drawable/btn_saveforlater" />

                    <ImageView
                        android:id="@+id/share_bike_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_share" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>