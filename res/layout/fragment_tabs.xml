<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabs_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/nav_bar"
        style="@style/navbar_style"
        android:layout_width="fill_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/navBarLeftButton"
            style="@style/navbar_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/navBarLefSeperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/navBarLeftButton"
            android:background="@drawable/nav_seperator"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_icon" android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/navBarRightSeperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/navBarRightButton"
            android:background="@drawable/nav_seperator"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/navBarRightButton"
            style="@style/navbar_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/navBarLeftButton"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@id/tab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_search"
            android:button="@null" />

        <RadioButton
            android:id="@id/tab_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_sell"
            android:button="@null" />

        <RadioButton
            android:id="@id/tab_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_articles"
            android:button="@null" />

        <RadioButton
            android:id="@id/tab_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_settings"
            android:button="@null" />
    </RadioGroup>

</LinearLayout>